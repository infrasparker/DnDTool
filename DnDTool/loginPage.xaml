<Page x:Class="DnDTool.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDTool"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginPage"
      Margin="10">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Name="usernameField" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Background="White"/>
            <TextBox Name="passwordField" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0" Width="200" Background="White"/>
            <Button Name="loginButton" Content="Login" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 20, 0, 0"/>
            <Button Name="registerButton" Content="Register" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 0"/>
        </StackPanel>
    </Grid>
</Page>
